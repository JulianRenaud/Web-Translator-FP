@using RestSharp
@model RootT
@{
    ViewData["Title"] = "Language Detector";

}


<div class="text-center" id="text-color">
    <h1 class="display-4">Language Detector</h1>
    <p>Please input text to detect the language!</p>
</div>

<form action="Detect" method="post" class="text-center">
    <textarea name="text" class="textboxsize" placeholder="Enter your text..." id="box-shadow"></textarea>

    

    <div>
        <button type="submit" class="btn btn-success form-control" id="button" style="margin:5px;"><h5>Detect</h5></button>
    </div>
</form>